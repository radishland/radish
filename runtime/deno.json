{
  "name": "@radish/runtime",
  "version": "0.3.1",
  "tasks": {
    "check": "deno fmt --check && deno lint && deno check **/*.ts",
    "build": "pnpm build"
  },
  "fmt": {
    "exclude": [
      "**/*.md"
    ]
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ],
    "checkJs": true,
    "noImplicitOverride": true
  },
  "exports": {
    ".": "./src/handler-registry.ts",
    "./reactivity": "./src/reactivity.ts",
    "./utils": "./src/utils.ts"
  }
}
