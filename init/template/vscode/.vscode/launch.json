  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug app",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "program": "${file}",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-wait",
        "--allow-all",
        "--config",
        "${workspaceFolder}/deno.jsonc"
      ],
      // Debug command args: "--build", "--importmap" etc.
      "args": [],
      "env": {},
      "attachSimplePort": 9229,
      "experimentalNetworking": "off"
    }
  ]
}
